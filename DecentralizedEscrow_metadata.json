		"devdoc": {
			"details": "This contract facilitates a trustless transaction between a buyer and a seller, with an arbiter to resolve disputes. It holds funds until the buyer confirms receipt of goods/services, or until a dispute is resolved by the arbiter. This solves the real-world problem of counterparty risk in online transactions.",
			"kind": "dev",
			"methods": {
				"constructor": {
					"details": "The constructor initializes the escrow agreement. The buyer deploys the contract and sends the funds at the same time.",
					"params": {
						"_arbiter": "The address of the neutral third party for disputes.",
						"_seller": "The address of the party providing the goods/service."
					}
				},
				"raiseDispute()": {
					"details": "Buyer or Seller can raise a dispute, locking the funds for the arbiter."
				},
				"refundFunds()": {
					"details": "Seller cancels the agreement and refunds the buyer. This is useful if the seller is unable to deliver the goods/service."
				},
				"releaseFunds()": {
					"details": "Buyer confirms satisfaction and releases the funds to the seller."
				},
				"resolveDispute(bool)": {
					"details": "Arbiter resolves a dispute, sending funds to the rightful party.",
					"params": {
						"_payoutToSeller": "True if the seller wins the dispute, false if the buyer wins."
					}
				}
			},
